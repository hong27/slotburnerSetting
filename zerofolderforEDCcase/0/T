FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    fixedWalls
    {
        type            zeroGradient;
    }

    inletFuel
    {
        type            fixedValue;
        value           uniform 300;
    }

    inletCoflow
    {
        type            fixedValue;
        value           uniform 300;
    }

    entrainmentBottom
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    entrainmentWestSide
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    entrainmentNorthSide
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    entrainmentEastSide
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    entrainmentSouthSide
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

}


